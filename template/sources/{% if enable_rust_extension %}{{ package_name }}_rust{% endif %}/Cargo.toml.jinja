[package]
name = "{{ package_name }}-rust"
version = "0.1.0"  # Will be updated by build.rs
edition = "2021"
publish = false

[lib]
name = "_rust"  # Will be importable as {{ package_name }}._rust
crate-type = ["cdylib"]

[dependencies]
pyo3 = { version = "0.20", features = ["extension-module"] }

[build-dependencies]
regex = "1.10"

{%- if enable_property_tests %}
[dev-dependencies]
proptest = "1.4"
{%- endif %}
[advisories]
vulnerability = 'deny'
unmaintained = 'warn'
notice = 'warn'

[bans]
multiple-versions = 'warn'
wildcards = 'allow'
skip = [
    { name = 'syn' },  # Common to have multiple versions
]

[licenses]
unlicensed = 'deny'
allow = [
    'Apache-2.0',
    'MIT',
    'BSD-3-Clause',
]
default = 'deny'

[sources]
unknown-registry = 'deny'
unknown-git = 'deny'

# EditorConfig: http://EditorConfig.org
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

# Top level of project.
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.md]
max_line_length = 79

[*.{py,py.jinja}]
max_line_length = 79
insert_final_newline = true

[*.{rs,rs.jinja}]
max_line_length = 79
insert_final_newline = true

[*.{rst,rst.jinja}]
indent_size = 2
max_line_length = 79

[*.{toml,toml.jinja}]
indent_size = 2

[*.yaml]
indent_size = 2
